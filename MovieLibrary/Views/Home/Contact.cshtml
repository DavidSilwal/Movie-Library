@model MovieLibrary.ViewModels.ContactUsViewModel

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="well well-sm">
                <form class="form-horizontal" action="" method="post">
                    <fieldset>
                        <legend class="text-center">@ViewBag.Title</legend>
                        <div asp-validation-summary="All"></div>
                        <!-- Name input-->
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Name">Name</label>
                            <div class="col-md-9">
                                <input asp-for="Name" type="text" placeholder="Your name" class="form-control">
                            </div>
                        </div>

                        <!-- Email input-->
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Email">Your E-mail</label>
                            <div class="col-md-9">
                                <input asp-for="Email" type="text" placeholder="Your email" class="form-control">
                            </div>
                        </div>

                        <!-- Message body -->
                        <div class="form-group">
                            <label class="col-md-3 control-label" asp-for="Message">Your message</label>
                            <div class="col-md-9">
                                <textarea class="form-control" asp-for="Message" placeholder="Please enter your message here..." rows="5"></textarea>
                            </div>
                        </div>

                        <!-- Form actions -->
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>